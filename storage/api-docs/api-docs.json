        "/api/v1/calls/initiate": {
            "post": {
                "tags": [
                    "WebRTC"
                ],
                "summary": "Initiate a WebRTC call",
                "operationId": "3890b3fdc339d938d1a5d50765f7a2d8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "receiver_id"
                                ],
                                "properties": {
                                    "receiver_id": {
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "is_video": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Call initiated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "call_id": {
                                            "type": "string",
                                            "example": "abc123def456"
                                        },
                                        "sdp_offer": {
                                            "type": "string",
                                            "example": "v=0\\r\\no=- 1234567890 1 IN IP4 127.0.0.1\\r\\n..."
                                        },
                                        "ice_candidates": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "example": "candidate:1 1 UDP 2122252543 192.168.1.1 56789 typ host"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
